<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="@string/monitor_choose_title1"
           android:padding="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="@string/monitor_choose_title2"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="@string/monitor_choose_title3"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lv_list1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:cacheColorHint="#00000000"
            android:divider="@color/threelist_item_devide_line_gray"
            android:dividerHeight="1px"
            android:fastScrollEnabled="true"
            android:listSelector="#00000000"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/lv_list2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/threelist_seconde_list_bg"
            android:cacheColorHint="#00000000"
            android:divider="@color/threelist_item_devide_line_gray"
            android:dividerHeight="0.5px"
            android:fastScrollEnabled="true"
            android:listSelector="#00000000"
            android:scrollbars="none" />
        <ListView
            android:id="@+id/lv_list3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:cacheColorHint="#00000000"
            android:divider="@color/threelist_item_devide_line_gray"
            android:dividerHeight="0.5px"
            android:fastScrollEnabled="true"
            android:listSelector="#00000000"
            android:scrollbars="none" />



    </LinearLayout>

</LinearLayout>
