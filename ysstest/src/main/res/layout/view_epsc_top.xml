<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@mipmap/title_top_bg"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="35dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:paddingEnd="5dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/btn_white_back_selector"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="35dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_back"
        android:paddingBottom="15dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:src="@drawable/btn_web_close_selector"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="35dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:paddingEnd="15dp"
        android:paddingStart="5dp"
        android:paddingTop="15dp"
        android:src="@drawable/btn_detail_more_selector"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvTitleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/iv_close"
        android:layout_toStartOf="@+id/ivMore"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvTopOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:text="чбошод"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:visibility="invisible"/>
</RelativeLayout>